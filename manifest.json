{
  "manifest_version": 3,
  "name": "KeepWise - Intelligent Summarization",
  "version": "1.0.0",
  "description": "Summarize highlighted text using Chrome's built-in Summarizer API (Gemini Nano)",
  "action": {
    "default_title": "Summarize Selection",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*",
    "https://keep-wise.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "devtools_page": "devtools.html",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}

